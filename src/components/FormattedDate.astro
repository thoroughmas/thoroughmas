---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: '2-digit',
			timeZone: 'Australia/Adelaide', // Set to Adelaide time zone
		})
	}
</time>
