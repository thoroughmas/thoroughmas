---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectList from '../../components/ProjectList.astro';
import { projects } from './projects';

---

<BaseLayout
	title="Projects"
	description="A collection of my recent projects."
>
  <div class='container'>
    <div class="mb-10">
      <h1 class="text-3xl font-bold mb-2">My Projects</h1>
      <p class="text-zinc-700 dark:text-zinc-300 text-lg">Some projects I don't mind sharing.</p>
    </div>
    <ProjectList projects={projects}/>
  </div>
</BaseLayout>
