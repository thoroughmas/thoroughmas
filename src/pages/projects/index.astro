---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectList from '../../components/ProjectList.astro';
import { categorizedProjects } from './projects';
---

<BaseLayout title='Projects' description='A collection of my recent projects.'>
	<div class='container'>
		<div class='mb-10'>
			<h1 class='text-3xl font-bold mb-2'>My Projects</h1>
			<p class='text-zinc-700 dark:text-zinc-300 text-lg'>Some projects I don't mind sharing.</p>
		</div>

		<!-- Upcoming Projects Section -->
		{
			categorizedProjects.upcoming.length > 0 && (
				<section class='mb-12'>
					<div class='flex items-center mb-6'>
						<h2 class='text-2xl font-semibold text-purple-600 dark:text-purple-400'>Upcoming</h2>
						<span class='ml-3 px-2 py-1 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 text-xs rounded-full'>
							{categorizedProjects.upcoming.length} project{categorizedProjects.upcoming.length !== 1 ? 's' : ''}
						</span>
					</div>
					<ProjectList projects={categorizedProjects.upcoming} />
				</section>
			)
		}

		<!-- Ongoing Projects Section -->
		{
			categorizedProjects.ongoing.length > 0 && (
				<section class='mb-12'>
					<div class='flex items-center mb-6'>
						<h2 class='text-2xl font-semibold text-green-600 dark:text-green-400'>Ongoing</h2>
						<span class='ml-3 px-2 py-1 bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 text-xs rounded-full'>
							{categorizedProjects.ongoing.length} project{categorizedProjects.ongoing.length !== 1 ? 's' : ''}
						</span>
					</div>
					<ProjectList projects={categorizedProjects.ongoing} />
				</section>
			)
		}

		<!-- Archive Projects Section -->
		{
			categorizedProjects.archive.length > 0 && (
				<section class='mb-12'>
					<div class='flex items-center mb-6'>
						<h2 class='text-2xl font-semibold text-zinc-600 dark:text-zinc-400'>Archive</h2>
						<span class='ml-3 px-2 py-1 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 text-xs rounded-full'>
							{categorizedProjects.archive.length} project{categorizedProjects.archive.length !== 1 ? 's' : ''}
						</span>
					</div>
					<ProjectList projects={categorizedProjects.archive} />
				</section>
			)
		}
	</div>
</BaseLayout>
